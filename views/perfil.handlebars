<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
    integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />
  <link rel="stylesheet" href="./style/datos.css" />
</head>

<body>
  <img src="./img/logo_blanco.png" alt="Logo" class="logo">
  <div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />
    <form action="/updateUser" method="POST">
      <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
          {{#if usuario}}
          <label>Email</label>
          <input name="email" type="hidden" value="{{usuario.email}}" />
          <input class="form-control m-auto" disabled value="{{usuario.email}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Nombre</label>
          <input name="nombre" class="form-control m-auto" value="{{usuario.nombre}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Password</label>
          <input name="password" type="password" class="form-control m-auto" value="{{usuario.password}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Repita la password</label>
          <input name="repeatPassword" type="password" class="form-control m-auto" value="{{usuario.password}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>AÃ±os de experiencia</label>
          <input name="anos_experiencia" class="form-control m-auto" value="{{usuario.anos_experiencia}}" />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label>Especialidad</label>
          <input name="especialidad" class="form-control m-auto" value="{{usuario.especialidad}}" />
        </div>
      </div>
      {{/if}}
      <div class="mb-1">
        <button type="submit" id="actualizar">Actualizar</button>
      </div>
    </form>
    <form action="/deleteUser" method="POST">
      <input type="hidden" name="email" value="{{usuario.email}}" />
      <div>
        <button type="submit" id="eliminar">Eliminar cuenta</button>
      </div>
    </form>
  </div>


  
  <!-- Modal -->
  <div class="modal fade" id="actualizarModal" tabindex="-1" role="dialog" aria-labelledby="mensajeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mensajeModalLabel">Usuario actualizado</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="actualizarDisable" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
<!-- Modal -->
  <div class="modal fade" id="eliminarModal" tabindex="-1" role="dialog" aria-labelledby="mensajeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mensajeModalLabel">Usuario eliminado</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="eliminarDisable" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

</body>
<script type="text/javascript" src="./js/perfil.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</html>